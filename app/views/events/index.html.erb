
<div class="row">
  <div class="justify-content-center">
<h1>Events</h1>
<% if user_signed_in? %>
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th>Event</th>
        <th>Details</th>
        <th>Organiser</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.description %></td>
          <td><%= event.name %></td>
          <td><%= event.date %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h1>Create event</h1>
  <%# Add create event button here and it should link to signing up or logging in %>
<% end %>

<br>  


  </div>
</div>



